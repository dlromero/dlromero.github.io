<style>
    #loading {
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        position: fixed;
        display: block;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
        text-align: center;
    }

    #loading-image {
        position: absolute;
        /*top: 50%;*/
        /*left: 40%;*/
        z-index: 100;
        /*text-align: center;*/
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%);
    }
</style>

<div id="loading" ng-hide="!layout.loading">
    <img id="loading-image" src="@Url.Content("~/Content/Images/ring.gif")" width="100" />
</div>


<div ng-controller="carritoController" ng-show="!layout.loading">
    <resolve-loader></resolve-loader>
    <div ng-view>
        @Html.Partial("SubPrincipal")
    </div>
</div>

