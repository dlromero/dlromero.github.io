
<link href="~/Content/FileInput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
<!-- canvas-to-blob.min.js is only needed if you wish to resize images before upload.
     This must be loaded before fileinput.min.js -->
<script src="~/Content/FileInput/js/plugins/canvas-to-blob.min.js" type="text/javascript"></script>
<!-- sortable.min.js is only needed if you wish to sort / rearrange files in initial preview.
     This must be loaded before fileinput.min.js -->
<script src="~/Content/FileInput/js/plugins/sortable.min.js" type="text/javascript"></script>
<!-- purify.min.js is only needed if you wish to purify HTML content in your preview for HTML files.
     This must be loaded before fileinput.min.js -->
<script src="~/Content/FileInput/js/plugins/purify.min.js" type="text/javascript"></script>
<!-- the main fileinput plugin file -->
<script src="~/Content/FileInput/js/fileinput.min.js"></script>


@{
    string sName = "kartik-input-" + Model + "[]";
}

<input id="input-@Model" name="@sName" type="file" class="file">
<script>
    $("#input-@Model").fileinput({
        uploadUrl: '@Url.Action("UploadFile", "Shoes")', // server upload action
        uploadAsync: true,
        maxFileCount: 5
    });
</script>